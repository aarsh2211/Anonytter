<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.anonytter.signup"
    android:orientation="vertical"
    android:background="@drawable/anttra">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/black"
            android:scaleType="centerCrop"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ANONYTTER"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="22sp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGNIN"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:hint="Email"
        android:textColorHint="@android:color/black"
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/black"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:hint="Password"
        android:textColorHint="@android:color/black"
        android:id="@+id/password"
        android:inputType="textPassword"
        android:textColor="@android:color/black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="SUBMIT"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textAlignment="center"
        android:onClick="submit_signin"
        android:id="@+id/submit_signin"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New? SIGNUP"
        android:textSize="25sp"
        android:layout_marginTop="12dp"
        android:id="@+id/submit_signup"
        android:onClick="submit_signin"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        />



</LinearLayout>
